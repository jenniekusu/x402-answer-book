datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

generator client {
  provider = "prisma-client-js"
}

model Answer {
  id        Int       @id @default(autoincrement())
  text      String
  tags      String    // comma-separated categories: love,career,money,...
  tone      String    // gentle | neutral | sharp
  weight    Int       @default(1)
  createdAt DateTime  @default(now())
  sessions  SessionAnswer[]
}

model AstroHint {
  id         Int      @id @default(autoincrement())
  zodiacSign String   // Aries, Taurus, ...
  category   String   // love, career, ...
  text       String
  weight     Int      @default(1)
  createdAt  DateTime @default(now())
}

model SessionAnswer {
  id         Int      @id @default(autoincrement())
  sessionId  String
  answerId   Int
  zodiacSign String
  createdAt  DateTime @default(now())

  answer Answer @relation(fields: [answerId], references: [id], onDelete: Cascade)

  @@index([sessionId, createdAt])
}


